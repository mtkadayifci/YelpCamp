<% include ../partials/header %>

<div class="row">
    <h1 class="text-center">Edit Comment</h1>
    <div style="width:30%; margin: 30px auto;">
       <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
              <div class="form-group">
                <textarea class="form-control" rows=3 name="comment[text]" placeholder="Comment"><%=comment.text%></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Update!</button>
            </div>
        </form>
        <a href='/campgrounds/<%=campground_id%>'>Go Back</a>
    </div>
   
</div>

<% include ../partials/footer %>