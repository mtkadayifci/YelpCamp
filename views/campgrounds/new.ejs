<% include ../partials/header %>

<div class="row">
    <h1 class="text-center">Create a New Campground</h1>
    <div class="col-md-6 col-md-offset-3" style="margin-top:30px;">
        <form method="POST" action="/campgrounds">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image Url">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
            </div>
              <div class="form-group">
                <textarea class="form-control"  rows=10 name="description" placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href='/campgrounds'>Go Back</a>
    </div>

</div>

<% include ../partials/footer %>